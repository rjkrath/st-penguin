<!DOCTYPE html>
<html>
<head>
  <title>Welcome to the Scriptorium</title>
  <%= stylesheet_link_tag("application", media: "all") %>
  <%= javascript_include_tag("application") %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container scriptorium">

  <% %w(notice warning error).each do |flash_type| %>
    <div class="flash <%= flash_type %>" style="display: <%= flash[flash_type].present? ? 'block' : 'none' %>">
      <%= flash_for_type(flash_type).html_safe %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
